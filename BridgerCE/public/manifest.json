{
    "manifest_version": 3,
    "name": "Bridger - LinkedIn Connection Automater",
    "version": "1.1",
    "description": "Bridger is an AI-powered LinkedIn networking assistant that helps send personalized messages to build meaningful connections.",
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "action": {
      "default_popup": "index.html",
      "default_title": "Bridger",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "permissions": [
      "identity",
      "storage",
      "tabs",
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://www.googleapis.com/*",
      "https://gmail.googleapis.com/*",
      "https://www.linkedin.com/*",
      "https://api.openai.com/*"
    ],
    "oauth2": {
      "client_id": "257574660425-uvhuqippopg3n8jtu7jj6nnt3agubn21.apps.googleusercontent.com",
      "scopes": [
        "https://www.googleapis.com/auth/userinfo.email", 
        "https://www.googleapis.com/auth/userinfo.profile",
        "https://www.googleapis.com/auth/gmail.send"
      ]
    },
    "content_scripts": [
      {
        "matches": ["https://www.linkedin.com/in/*"],
        "js": ["contentScript.js"],
        "run_at": "document_start",
        "all_frames": false
      }
    ]
}
  